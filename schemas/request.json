{
  "title": "Encryption Key Request",
  "type": "object",
  "properties": {
    "publicKey": {
      "title": "Signing Public Key",
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "maxLength": 64
    },
    "signature": {
      "type": "string",
      "pattern": "^[0-9a-f]{128}$",
      "maxLength": 128
    },
    "message": {
      "type": "object",
      "properties": {
        "email": {
          "title": "E-Mail Address",
          "type": "string",
          "format": "email",
          "maxLength": 254
        },
        "clientStretchedPassword": {
          "title": "Stretched Password",
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        },
        "authenticationToken": {
          "title": "Authentication Token",
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        },
        "date": {
          "title": "Request Date",
          "type": "string",
          "format": "date-time",
          "maxLength": 25
        }
      },
      "required": [
        "email",
        "authenticationToken",
        "clientStretchedPassword",
        "date"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "publicKey",
    "signature",
    "message"
  ],
  "additionalProperties": false
}
